{% extends 'base.html.twig' %}

{% block title %}Arcadia - connexion{% endblock %}

{% block content %} 

<div class="background-image"
            style="background-image: url('{{ asset('images/feuillage.png')}}');background-size: cover;background-position: top;height: 100vh; ">
            <div class="container mt-5 mb-5">
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <h3 class="h3 text-center mb-5">Connexion</h3>
                        <div class="card">
                            <div class="card-header">
                                <i>Seul le personnel du zoo peut se connecter</i>
                            </div>
                            <div class="card-body">
                                <form id="loginForm">
                                    <div class="form-group">
                                        <label for="inputEmail">Adresse e-mail :<span class="text-danger">
                                                *</span></label>
                                        <input type="email" class="form-control" id="inputEmail"
                                            placeholder="Entrez votre adresse e-mail">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputPassword">Mot de passe :<span class="text-danger">
                                                *</span></label>
                                        <input type="password" class="form-control" id="inputPassword"
                                            placeholder="Entrez votre mot de passe">

                                    </div>
                                    <button type="submit" class="btn btn-custom text-white">Se connecter</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
